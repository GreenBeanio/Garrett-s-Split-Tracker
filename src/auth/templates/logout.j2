{% extends "base.j2" %}

{%block css %}
    {{ super() }}
{% endblock %}
{%block js %}
    <script src="{{ url_for('static', filename='js/cookies.js') }}"></script>
{% endblock %}

{% block title %}
   Log Out
{% endblock %}

{% block navigation_bar %}
    {{ super() }}
{% endblock %}

{% block content %}
    <h1> Log out of  Garrett's Split Tracker </h1>
    <div>
        <form method="POST" action="{{url_for('auth.showLogout')}}">
            <label for="log_all_text">Log Out All Sessions:</label>
            <input type="checkbox" id="log_all_text" name="log_all_check" value="log_out_all"><br><br>
            <input type="submit" name="b_log" value="Log Out">
        </form>
    </div>
{% endblock %}

